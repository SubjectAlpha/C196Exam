<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CourseFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="19dp"
        android:text="Your Instructor's Information"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructorFName"
        android:layout_width="411dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/instructorEmail"
        android:layout_width="198dp"
        android:layout_height="49dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/instructorPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructorFName" />

    <TextView
        android:id="@+id/instructorPhone"
        android:layout_width="208dp"
        android:layout_height="47dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructorFName" />

</androidx.constraintlayout.widget.ConstraintLayout>